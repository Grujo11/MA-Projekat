<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabbedMainFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boja"
        app:tabTextColor="@color/orange_light"
        app:tabIndicatorColor="@color/orange_light"
        app:tabSelectedTextColor="@color/orange_dark">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/maintab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_tab_title"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/playerstab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_players_tab_title"
            />
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</FrameLayout>