<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white_smoked"
    tools:context=".MecFragment"
    android:paddingHorizontal="38dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRandomMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/randomMatchBtn"
        android:layout_width="401dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="toGameActivity"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="@string/random_match"
        android:textAllCaps="true"
        android:textColor="@color/orange_light"
        android:textSize="21dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFriendlyMatch"
        android:layout_width="match_parent"
        android:layout_height="138dp"></androidx.cardview.widget.CardView>
</LinearLayout>